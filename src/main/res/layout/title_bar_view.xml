<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_view"
    android:layout_width="match_parent"
    android:layout_height="48dp">


    <ImageView
        android:id="@+id/title_bar_back_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/icon_click_selector"
        android:padding="8dp"
        android:scaleType="centerInside" />

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/title_bar_back_iv"
        android:background="#eeeeee" />


    <TextView
        android:id="@+id/title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/title_text_size" />


    <ImageView
        android:id="@+id/title_bar_more_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/more" />


    <RelativeLayout
        android:id="@+id/title_center_custom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_toLeftOf="@id/title_bar_more_iv"
        android:layout_toRightOf="@id/line"
        android:gravity="center">

    </RelativeLayout>

    <View
        android:id="@+id/title_bar_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"></View>

</RelativeLayout>